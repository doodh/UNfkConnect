{
    "manifest_version": 2,
  
    "name": "UNfkConnect",
    "description": "This extension attempts to fix Connect Carolina",
    "version": "0.0.0.1",

    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
          "16": "icon16.png",
          "32": "icon32.png",
          "48": "icon48.png",
          "128": "icon128.png"
        }},
    "icons": { 
        "16": "icon16bw.png",
        "32": "icon32bw.png",
        "48": "icon48.png",
       "128": "icon128bw.png" },
       
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "content_scripts": [
        {
        "matches": ["http://connectcarolina.unc.edu/*", "https://connectcarolina.unc.edu/*"],
         "js": ["content.js"],
         "run_at": "document_end"
        }
       ],  
    "permissions": [
        "browsingData",
        "https://ajax.googleapis.com/",
        "declarativeContent"
     ]
  }